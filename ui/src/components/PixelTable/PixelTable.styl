.tvlPixelTable
  >.pixel_flat_inner
    flex-direction: column
    justify-content: flex-start
    align-items: flex-start
body .tvlPixelTable_header
  width: calc(100% - 2px);
  margin-left: 1px
  margin-top: 1px
  >.pixel_flat_btn_bg
    >.pixel_flat_btn_bottom_1,
    >.pixel_flat_btn_bottom_2
      left: 0
      width: 100%
  >.pixel_flat_inner
    width: 100%
    justify-content: flex-start
    padding: 20px
