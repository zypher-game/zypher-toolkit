/* Butterflies.css */
.butterflies-container 
  position: absolute;
  width: 100%;
  height: 100vh;
  overflow: hidden;

.butterfly 
  position: absolute;
  top: 0;
  left: 0;
  animation: fly var(--animation-duration) ease-in-out infinite var(--animation-delay);

.butterfly-0 
  animation-name: fly-up;

.butterfly-1 
  animation-name: fly-left;

.butterfly-2 
  animation-name: fly-right;

.butterfly-3 
  animation-name: fly-right;

@keyframes fly-right 
  0% 
    transform: translate(0, 0) scale(1);
  50% 
    transform: translate(50vw, calc(100vh - 50px)) scale(0.6);
  100% 
    transform: translate(100vw, calc(100vh - 50px)) scale(1);
  0%, 100% 
    transition-timing-function: cubic-bezier(0.4, 0.0, 0.2, 1); /* 起点和终点采用缓入缓出 */
  50% 
    transition-timing-function: cubic-bezier(0.8, 0.5, 0.2, 1); /* 中间点采用不同的缓动效果 */

@keyframes fly-left 
  0% 
    transform: translate(100vw, 0) scaleX(-1) rotateZ(70deg);
  50% 
    transform: translate(-50px, calc(100vh - 50px)) scaleX(-0.6)  rotateZ(70deg);
  100% 
    transform: translate(0, calc(100vh - 50px)) scaleX(-1) rotateZ(70deg);
  0%, 100% 
    transition-timing-function: cubic-bezier(0.4, 0.0, 0.2, 1);
  50% 
    transition-timing-function: cubic-bezier(0.8, 0.5, 0.2, 1);

@keyframes fly-up 
  0% 
    transform: translate(0, 100vh) scale(1);
  50% 
    transform: translate(calc(100vw - 50px), 50px) scale(0.6);
  100% 
    transform: translate(calc(100vw - 50px), 0) scale(1);
  0%, 100% 
    transition-timing-function: cubic-bezier(0.4, 0.0, 0.2, 1);
  50% 
    transition-timing-function: cubic-bezier(0.8, 0.5, 0.2, 1);

@keyframes fly-down 
  0% 
    transform: translate(0, 0) scale(1);
  50% 
    transform: translate(calc(100vw - 50px), 50vh) scale(0.6);
  100% 
    transform: translate(calc(100vw - 50px), 100vh) scale(1);
  0%, 100% 
    transition-timing-function: cubic-bezier(0.4, 0.0, 0.2, 1);
  50% 
    transition-timing-function: cubic-bezier(0.8, 0.5, 0.2, 1);
