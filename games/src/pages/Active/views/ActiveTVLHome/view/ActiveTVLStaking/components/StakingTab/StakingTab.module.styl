.tab_col
  display: flex;
  justify-content: space-between
  align-items: center
  margin-bottom: 20px
  @media screen and (max-width: 830px)
    margin-bottom: 15px


.warn_tab_tooltip
  word-wrap: break-word;
  overflow-wrap: break-word;
  margin-bottom: 10px
  line-height: 22px
  :global(.svg_component)
    display: inline-block;
    vertical-align: middle
    margin-right: 11px;
    margin-left: 4px;
    height: 22px;
    svg
      width: 100%;
      height: 100%;
      margin: 0;
      display: block;
  p
    font-size: 14px
    display: inline-block;
    vertical-align: middle
