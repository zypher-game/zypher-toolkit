.start
  position: relative;
  height: 1080px
  // min-width: 1440px
  overflow-y hidden
.bg
  position absolute
  width: 100%;
  height: 100%
  top: 0
  left: 50%;
  transform: translateX(-50%);
  overflow: hidden;

.inner
  position relative
  z-index 2
  top: 50%
  left: 50%;
  transform: translateX(-50%) translateY(-50%);

.inner_inner
  width 1162px
  margin: 0 auto
  display: flex
  justify-content: space-between
  align-items: center
  margin-top: 80px
  .fl
    width 620px
    position relative
    .game
      position absolute
      z-index 3
      top: 210px
      left: -10px
  .fr
    width 552px
  .top
    position relative
    width 498px
    height 213px
    margin-bottom: 35px
    .top_bg
      position absolute
      top 0
      left: 0
      width: 100%
      height: 100%
    .top_inner
      z-index 2
      position absolute
      top: 45%
      left: 50%
      transform: translateX(-50%) translateY(-50%)
    .zytron02
      display block
      height: 84px
      margin: 0 auto
    .text
      font-size: 24px
      font-family: "Pixel Game"
      text-transform: uppercase
      color: #000000
      margin-top: -10px
.list
  width 500px
  margin-bottom: 12px
  position relative
  .border1,.border2
    position absolute
    width 100%
    top: 0
    left: 0
  :global(.pixel_flat_inner)
    flex-direction: column;
  .list1,.list2,.list3
    width 100%
    height 100px
    display: flex
    justify-content: space-between
    align-items: center
    position relative
    z-index 2
    div
      flex: 1
      display: flex
      justify-content: center
      align-items: center
  .list1
    border-bottom: 1px solid rgba(255,255,255,0.1)
    div:nth-child(1)
      justify-content: flex-start
      padding-left: 32px
      img
        height: 36px
        width: 133px
    div:nth-child(2)
      img
        width: 123px
        height: 42px
  .list2
    div:nth-child(1)
      justify-content: flex-start
      padding-left: 32px
      img
        height: 36px
        width: 165px
    div:nth-child(2)
      img
        width: 166px
        height: 44px
  .list3
    height 94px
    padding: 0 14px
    // .positive
    //   &:nth-child(1)
    //     height 50px
        // border-right: 1px solid rgba(255,255,255,0.1)
.list22
  margin-bottom: 0

.positive
  position relative
  width 222px
  max-width 222px
  min-width 222px
  height 70px
  &:hover
    .div_shadow
      opacity 0.5
    :global(.pixel_flat_btn_bg>div)
      opacity 1
  
  :global(.pixel_flat_btn_top_1), 
  :global(.pixel_flat_btn_top_2), 
  :global(.pixel_flat_btn_bottom_2), 
  :global(.pixel_flat_btn_bottom_1)
    height: 8px;
  .div_shadow
    transition: all 0.3s ease
    opacity 0
  :global(.pixel_flat_btn_bg>div)
    opacity 0
  :global(.pixel_flat_inner)
    cursor pointer
    height: 70px
    
  .cover
    position relative
    z-index 2
  .div_shadow
    width 100%
    position absolute
    z-index: 1;
    top: 4px
    left: 0
    opacity: 0.5
