.title
  font-size: 70px
  line-height: 67px;
  text-align: center
  position relative
  position relative
  z-index 2
  @media screen and (max-width: 1400px)
    font-size: 60px
  .title_text
    width: 100%;
    position relative
    z-index 2
    font-family: "Pixel Game"
    text-transform: uppercase
    color: #EEEBCB

  .shadow
    width: 100%;
    position absolute
    top: 0
    left: 50%
    transform: translateX(-50%)
    font-family: "Pixel Game Extrude"
    text-transform: uppercase
    color: #000027
    text-shadow: -3px -3px 0 #EEEBCB, 3px -3px 0 #EEEBCB, -3px 3px 0 #EEEBCB, 3px 3px 0 #EEEBCB;
