body .staking_staking
  &:hover 
    > .pixel_flat_btn_bg 
      > .pixel_flat_btn_inner,
      > .pixel_flat_btn_top_1,
      > .pixel_flat_btn_top_2,
      > .pixel_flat_btn_bottom_1,
      > .pixel_flat_btn_bottom_2 
        border: 1px solid #1D263B
  &>.pixel_flat_inner
    width: 100%
    height: 100%
    flex-direction: column
.staking_switch
  &>.pixel_flat_inner
    gap: 10px
.staking_input
  padding: 0 20px
  > .pixel_flat_inner 
    justify-content: space-between

.staking_week
  margin-top: 10px
.staking_input_btn
  position: absolute;
  top: 1px;
  right: -19px;
  height: calc(100% - 2px)
  width 130px
  @media screen and (max-width: 830px)
    width 107px
  > .pixel_flat_inner 
    gap: 6px
    padding-left: 20px;
    @media screen and (max-width: 830px)
      gap: 4px
      padding-left: 18px;
  &:after
    content: "";
    width: 20px;
    height: 100%;
    border-right: 1px solid #484F60;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 3;
    background: #343C4F;
.staking_confirm_top
  margin-top: 40px
  