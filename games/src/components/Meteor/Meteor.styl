.meteor-shower
  position: fixed;
  top: 70px;
  left: 0;
  width: 100%;
  height: calc(100% - 70px);
  z-index: 7;
.meteor-cont 
  top: 0%;
  position: absolute;
  height: 100%;
  width: 10%;
  display: flex;
  justify-content: center;
  transform: rotate(45deg);
.meteor-cont-small
  left: 20%;
  .meteor-ani
    animation: meteor 10s linear infinite 3s;
  .meteor_
    height: 6vh;
    width: 2px;
    opacity 0.3
.meteor-cont-medium
  right: 10%;
  .meteor-ani
    animation: meteor 6s linear infinite 2s;
  .meteor_
    height: 8vh;
    width: 3px;
    opacity 0.4
.meteor-cont-large
  left: 50%;
  .meteor-ani
    animation: meteor 4s linear infinite;
  .meteor_
    height: 10vh;
    width: 4px;
    opacity: 0.6;

.meteor-cont .meteor_
  background: linear-gradient(to top, #d6e6ff 0%, transparent 80%);
  border-radius: 10px 10px;
  z-index: 600;
  position: relative;


.meteor-ani 
  position: relative;
  top: -60%;
  left: 60%;
  height: 1200vh;
  width: 10%;
  display: flex;
  justify-content: center;


@keyframes meteor {
  0% {
    transform: translateY(0%);
  }

  100% {
    transform: translateY(100%);
  }
}