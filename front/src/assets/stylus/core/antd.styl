    .ant-message
        width: 300px;
        margin-top: 45vh;
        left: 50%;
        transform: translateX(-50%);
        &:before,
        &:after
            content: ""
            position: absolute
            top: 9px
            width: 9px
            height: calc(100% - 18px)
            background-color: #1d263b;
        &:before
            left: -9px
            border-left: 3px solid #3A4254;
            
        &:after
            right: -9px
            border-right: 3px solid #3A4254;
        &>div
            &:before,
            &:after
                content: ""
                position: absolute;
                top: 6px;
                width: 3px;
                height: calc(100% - 12px);
                border-bottom: 3px solid #3a4254;
                border-top: 3px solid #3a4254;
                background-color: #1d263b;
            &:before
                left: -6px;
            &:after
                right: -6px;

