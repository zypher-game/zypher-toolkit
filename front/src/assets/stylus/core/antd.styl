    .customNotification 
        max-width: 400px
        font-size: 16px
        padding: 18px 20px
        background-color:#1D263B
        position: relative
        overflow: visible;
        border-top: 3px solid #3A4254;
        border-bottom: 3px solid #3A4254;
        border-radius: 0
        margin-bottom: 0
        width: auto
        @media screen and (max-width: 768px)
            max-width: 250px
        &:before,
        &:after
            content: ""
            position: absolute;
            top: 0;
            width: 3px;
            height: 100%;
            border-bottom: 3px solid #3a4254;
            border-top: 3px solid #3a4254;
            background-color: #1d263b;
        &:before
            left: -3px;
        &:after
            right: -3px;
        &.success
            .ant-notification-notice-icon
                .icon
                    fill: var(--var-success)
            .svg_component svg
                fill: var(--var-success)

        &.failed
            .ant-notification-notice-icon
