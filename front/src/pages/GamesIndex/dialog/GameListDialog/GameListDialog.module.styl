body [data-reach-dialog-overlay].bottom
  @media screen and (max-width: 768px)
    align-items: flex-end
body [data-reach-dialog-content].center
  max-width: 1200px
  @media screen and (max-width: 768px)
    max-width: 100vw
    width: 100vw
    background-color: #1D263B
    padding: 15px 15px 30px
.title
  font-size: 20px;
  line-height: 30px;
  font-weight: 600;
  margin-bottom: 20px;
  @media screen and (max-width: 768px)
    font-size: 16px
    margin-bottom: 10px;

.GameListDialog
  padding: 30px
  @media screen and (max-width: 768px)
    padding: 30px 15px
  :global(>.pixel_flat_inner)
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
  
:global(body .ant-select-dropdown)
  z-index: 999999999999;
