.dappCard
  flex: 0 0 calc(33.3% - 20px)
  // min-width: 386px
  width: 33%
  padding: 30px
  margin-right: 20px
  margin-bottom: 20px
  @media screen and (max-width: 830px)
    width 100%
    min-width: 100%;
    flex: 1
    padding: 20px
    margin: 0

  &:last-child 
    margin-right: 0; 
  :global(>.pixel_flat_inner)
    flex-direction: column
    justify-content: space-between
    align-items: flex-start
    @media screen and (max-width: 830px)
      align-items: center
.top,.bottom
  width 100%
  @media screen and (max-width: 830px)
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
.logo
  width 62px
  @media screen and (max-width: 830px)
    width 54px
.title
  margin-top: 20px
  font-size: 18px
  font-weight: bold
  @media screen and (max-width: 830px)
    margin-top: 15px
    font-size: 16px
    text-align: center
.content
  font-size: 12px
  color: #959BA8
  margin-top: 10px
  @media screen and (max-width: 830px)
    text-align: center
    line-height: 14px
.rewards
  padding: 10px 20px
  margin-bottom: 30px
  margin-top: 20px
  @media screen and (max-width: 830px)
    margin-bottom: 20px
    padding: 10px
  :global(>.pixel_flat_btn_bg)
    opacity: 0.6
  :global(>.pixel_flat_inner)
    flex-direction: column
    align-items: flex-start
    justify-content: flex-start
    gap: 10px
    @media screen and (max-width: 830px)
      align-items: center
      gap: 5px
.dappSmall
  font-size: 12px
.text
  font-size: 14px
  font-weight: bold

  i
    color: #FFD02B
.dappBtn
  padding: 0 40px
  @media screen and (max-width: 830px)
    padding: 0 30px
  p
    font-size: 14px
    @media screen and (max-width: 830px)
      font-size: 12px
