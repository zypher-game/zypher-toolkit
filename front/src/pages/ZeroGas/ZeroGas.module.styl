.zeroGas
  max-width: 1200px
  margin: 0 auto 
  padding-bottom: 100px
  @media screen and (max-width: 1232px)
    padding: 0 16px 50px
.top
  display: flex
  justify-content: space-between
  gap: 20px
  flex-wrap: wrap
  padding-top: 30px
  padding-bottom: 30px
  .fl,.fr
    flex: 1; 
    display: flex;
    flex-direction: column; 
  .fl
    width: 65%
    max-width: 793px
    justify-content: space-between
  .fr
    position relative
    width: 35%
    max-width: 386px
.bannerCard
  position relative
  padding: 6px
  height: 120px
  .bannerCardInner
    position relative
    height: 100%
    .bg
      position: relative
      width: 100%;
      height: 100%;
    .logo
      position absolute
      width 72px
      top: 20px
      right 30px
    .bannerText
      width: 100%
      position: absolute
      z-index: 1
      top: 50%
      transform: translateY(-50%)
      padding-left: 40px
      h2
        font-size: 24px
        font-weight: bold
        margin-bottom: 10px
      p
        font-size: 12px
.flBanner
  margin-top: 30px
  h3
    font-size: 18px
    font-weight: bold
  .stakingCard
    padding: 30px
  .grey
    color: #959BA8
    font-size: 16px
.stakingTop
  display: flex
  justify-content: space-between
  align-items: flex-start
.stakingTopFl
  display: flex
  flex-direction: column
  gap: 10px
.stakingBottom
  margin-top: 40px
  display: flex
  justify-content: space-around
.SBT
  position: relative
  width: 100%
.smallLogo
  position: absolute
  height: 18px
  bottom: 32px
  right: 80px
