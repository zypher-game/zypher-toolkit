.inner
  width: 800px
  display: flex
  justify-content: space-between
  align-items: flex-start
  position: relative
  padding: 15vh 0
  margin: 0 auto
  @media screen and (max-width: 1132px)
    padding: 100px 16px 0
  @media screen and (max-width: 830px)
    flex-direction: column-reverse
    padding: 30px 15px 0
    width 100%
    gap: 30px
  .img
    width 400px;
    overflow: hidden
    @media screen and (max-width: 830px)
      width: 100%
      height: 120px
      object-fit: cover;
      object-position: center bottom;

  .fl
    flex: 1
    padding-right: 60px
    @media screen and (max-width: 830px)
      padding-right: 0
    .title
      padding-bottom: 20px
      margin-bottom: 30px
      display: flex
      flex-direction: column
      gap: 10px
      border-bottom: 2px solid #3A4357
      @media screen and (max-width: 830px)
        padding-bottom: 10px;
        margin-bottom: 20px;
      h3
        font-size: 20px
        font-weight: 600
        line-height: 24px
        @media screen and (max-width: 830px)
          font-size: 16px
          line-height: 18px
        strong
          color: #1649FF
    .text
      font-size: 14px
      color: #959BA8
      line-height: 21px
      margin-bottom: 10px
    .link
      margin-top: 50px
      margin-bottom: 35px
      
    .linkA
      display: flex
      justify-content: flex-start
      margin-top: 35px
      gap: 6px
      @media screen and (max-width: 830px)
        justify-content: center

      p
        color: #fff
        cursor pointer
        &:hover
          color: #eee
