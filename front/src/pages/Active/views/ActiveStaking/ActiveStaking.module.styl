.inner
  max-width: 1025px
  display: flex
  justify-content: space-between
  align-items: flex-start
  margin: 0 auto
  gap: 60px
  padding-top: 150px
  padding-bottom: 50px
  @media screen and (max-width: 1025px)
    padding: 0 16px 50px
    flex-direction: column
    justify-content: center
    align-items: center;
    margin: 0 auto 
    gap: 30px
  .fl
    width: 460px
    padding-top: 40px
    @media screen and (max-width: 830px)
      width: 100%
      padding-top: 20px
    .text
      font-size: 16px
      line-height: 24px
      strong
        color: #1649FF
    .mt
      margin-top: 20px
    .greyText
      font-size: 12px
      line-height: 18px
      color: #959BA8
      margin: 20px 0
    .img
      width: 100%
      @media screen and (max-width: 830px)
        margin-bottom: 20px
