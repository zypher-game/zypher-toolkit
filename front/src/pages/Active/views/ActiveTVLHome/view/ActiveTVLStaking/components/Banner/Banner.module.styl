.banner
  padding-top: 30px
  padding-bottom: 40px
  display: flex
  justify-content: space-between
  align-items: flex-start
  @media screen and (max-width: 1200px)
    flex-direction: column-reverse;
  @media screen and (max-width: 830px)
    padding-top: 20px
    padding-bottom: 30px
  :global(.pixel_active_tab)
    margin: 0 0 20px 0
  :global(.active_tvl_tab)
    margin-top: 20px
    margin-bottom: 20px
    @media screen and (max-width: 830px)
      margin-top: 0
      margin-bottom: 0
.fl_title
  font-weight: 600
  font-size: 16px
  padding-bottom: 10px
  @media screen and (max-width: 830px)
    padding-bottom: 8px
.fl_grey
  font-size: 14px
  color: #959BA8
  padding-bottom: 20px
  &:last-child
    padding-bottom: 0
