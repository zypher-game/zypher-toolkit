.mt30
  margin-top: 30px
.mt20
  margin-top: 20px
.mb10
  margin-bottom: 10px
.mb20
  margin-bottom: 20px

.fl_title
  font-weight: 600
  font-size: 16px
  padding-bottom: 10px
.fl_grey
  font-size: 14px
  color: #959BA8
  padding-bottom: 20px
.ActiveTVLStaking_tab
  width: fit-content;
  &:first-child,
  &:last-child 
    .ActiveTVLStaking_tab_li
      &:after
        contain: ""
        width 2px 
        height calc(100% - 4px)
        top: 2px
        background-color: #1649FF
  .ActiveTVLStaking_tab_li
    display: flex;
    padding: 0 23px;
    height: 100%;
    justify-content: center;
    align-items: center;
    min-width: 110px
    position relative
    cursor pointer
    p
      transition: opacity  0.3s ease
    &:hover
      p
        opacity: 0.8
    &.on
      background-color: #1649FF
      &:hover
        p
          opacity: 1
      &:first-child,
      &:last-child 
        &:after
          content: ""
          position absolute
          width 2px 
          height calc(100% - 4px)
          top: 2px
          background-color: #1649FF
      &:first-child
        &:after
          left: -2px
      &:last-child
        &:after
          right: -2px
  :global(>.pixel_flat_inner)
    justify-content: flex-start
    padding: 0 4px
.tab_col
  display: flex;
  justify-content: space-between
  align-items: center
  margin-bottom: 20px

.staking
  :global(>.pixel_flat_inner)
    p
      font-size: 14px
      text-shadow: -1px -1px 0 #934417, 1px 0 0 #934417, 1px 0 0 #934417, 0 2px 0 #934417

.warn_tab_tooltip
  display: flex; 
  justify-content: flex-start
  align-items: center
  gap: 10px
  margin-bottom: 10px
  :global(.svg_component)
    margin-left: -4px
    width 20px
    margin-right: 10px;
  p
    font-size: 14px
:global(body .tvlPixelTable_header_table)
  :global(>.pixel_flat_inner)
    padding: 0
    .row
      padding: 16px 30px 
.row
  padding: 16px 30px 20px 
  >p, >div
    display: inline-flex
    vertical-align: middle
  >p:nth-child(1),>div:nth-child(1)
    width: 150px
  >p:nth-child(2),>div:nth-child(2)
    width: 110px
  >p:nth-child(3),>div:nth-child(3)
    width: 90px
  >p:nth-child(4),>div:nth-child(4)
    width: 70px
  >p:nth-child(5),>div:nth-child(5)
    width: 80px
  
.fl_tab_header
  p
    font-size: 12px
