.bg 
  background: url($preStaticUrl + '/img/tvl/hero_bg.jpg') no-repeat center
  background-size: cover
  h2
    text-align: center
    padding-top: 80px
    font-size: 28px
    font-weight: bold
    line-height: 34px
    margin-bottom: 10px
    @media screen and (max-width: 830px)
      padding-top: 20px
      font-size: 18px
      line-height: 22px
      margin-bottom: 7px
    i 
      font-weight: bold
      background: linear-gradient(0, #1649FF 0%, #1649FF 19%, #4D74FF 20%, #4D74FF 39%, #809BFF 40%, #809BFF 59%, #809BFF 60%, #809BFF 79%,#B2C3FF 80%, #B2C3FF 100%);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      color: transparent;
      padding-left: 10px
  .textGrey
    font-size: 16px
    text-align: center
    color: #959BA8
    @media screen and (max-width: 830px)
      font-size: 12px
.inner
  width 1100px
  margin: 0 auto
  padding: 100px 0
  display: flex
  justify-content: space-between
  align-items: flex-start
  flex-wrap: wrap
  @media screen and (max-width: 1132px)
    width 100%
    padding: 0 16px
.inner_inner
  width: 410px
  position relative
  @media screen and (max-width: 1100px)
    width: 45%
  @media screen and (max-width: 830px)
    width: 70%
  .name
    position absolute
    bottom: -14px
    left: 0
    width 100%
    text-align: center
    font-size: 16px
    font-weight: 600
    text-shadow: -1px -1px 0 #934417, 1px 0 0 #934417, 1px 0 0 #934417, 0 2px 0 #934417

.hero_big
  transform-origin: bottom center;
  animation: scaleAni 4s infinite;
  svg
    path
      fill: rgba(0, 0, 0, 0.4)
.fr
  width: 340px
  @media screen and (max-width: 1100px)
    width: 100%;
    margin-top: 30px
    margin-bottom: 30px

@keyframes scaleAni {
  0% {
    scale: 1
  }
  50% {
    scale: 1.02
  }
  100% {
    scale: 1
  }
}