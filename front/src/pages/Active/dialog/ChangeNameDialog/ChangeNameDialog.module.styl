.title
  width: 100%
  font-weight: 600
  text-align: center
.edit
  position absolute
  bottom: 0
  width 100%
  background-color: rgba(0, 0, 0, 0.7)
  text-align: center;
  left: 0
  font-size: 12px
  cursor pointer
  height: 24px
  line-height: 24px
  input
    position absolute
    z-index 9
    width: 100%
    height: 100%
    top: 0
    left: 0
    opacity 0
.table_body
  :global(> .pixel_flat_inner)
    justify-content: center
    align-items: center;
.input
  margin-bottom: 30px
  :global(> .pixel_flat_inner)
    padding: 0 20px
    align-items: center
    justify-content: center
    input
      font-size: 18px
      font-weight: 600
.text
  margin: 20px 0 10px
  width: 100%

.save
  font-size: 14px
.body_inner
  width: 100%
  padding: 40px 30px
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column