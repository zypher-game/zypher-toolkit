.card
  display: flex
  align-items: center
  justify-content: space-around
  flex-wrap: wrap
  gap: 40px
  margin-bottom: 48px
.bg
  width 440px
  height 382px
  position relative
  @media screen and (max-width: 500px)
    width 300px
    height: auto
.item
  position relative
  @media screen and (max-width: 500px)
    width 300px
  .icon,.title,.text
    position absolute
    z-index 2
  p
    text-align: center
    line-height: 22px
    width: 80%;
    left: 10%;
    font-size: 18px
    @media screen and (max-width: 500px)
      font-size: 12px
      line-height: 13px
  .icon
    width 40px
    height 40px
    top 20px
    left: 50%
    transform: translateX(-50%)
    @media screen and (max-width: 500px)
      width 30px
      height 30px
      top 10px
  &.owner
    p
      color: #934417
  &.parent
    p
      color: #660B75
  .title
    font-weight: bold
    top 80px
    @media screen and (max-width: 500px)
      top: 50px
  .text
    top: 254px
    @media screen and (max-width: 500px)
      top: 164px
.close
  width: 40px
  height: 40px
  margin: 0 auto
  @media screen and (max-width: 500px)
    width: 40px
    height: 30px
  :global(>.pixel_flat_btn_bg)
    opacity 0.3
  :global(.dialog_close)
    position: relative;
    top: auto;
    right: auto;
    width: auto;
    height: auto;
    :global(.svg_component)
      svg
        width: 28px;
        height: 28px;
        @media screen and (max-width: 500px)
          width: 20px;
          height: 20px;